    <!-- JavaScript Logic -->
    <script>
        // --- UTILITY: Label Wrapping for Chart.js (Strict Requirement) ---
        function wrapLabels(labels, maxChars = 16) {
            return labels.map(label => {
                if (typeof label !== 'string' || label.length <= maxChars) return label;
                const words = label.split(' ');
                const lines = [];
                let currentLine = words[0];

                for (let i = 1; i < words.length; i++) {
                    if (currentLine.length + 1 + words[i].length <= maxChars) {
                        currentLine += ' ' + words[i];
                    } else {
                        lines.push(currentLine);
                        currentLine = words[i];
                    }
                }
                lines.push(currentLine);
                return lines;
            });
        }

        // --- GLOBAL CHART CONFIG ---
        Chart.defaults.font.family = "'Roboto', sans-serif";
        Chart.defaults.color = '#64748b'; // slate-500
        Chart.defaults.scale.grid.color = '#f1f5f9'; // slate-100

        // Common Tooltip Config (Strict Requirement)
        const commonTooltip = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // --- CHART 1: Dataset Comparison (Bar) ---
        const ctxDataset = document.getElementById('datasetChart').getContext('2d');
        const rawDatasetLabels = ['NSL-KDD (Prototyping)', 'UNSW-NB15 (Modern)', 'CICIDS2017 (Enterprise)'];
        
        new Chart(ctxDataset, {
            type: 'bar',
            data: {
                labels: wrapLabels(rawDatasetLabels),
                datasets: [{
                    label: 'Records (Approx)',
                    data: [125973, 2540044, 2800000],
                    backgroundColor: ['#4f46e5', '#06b6d4', '#ec4899'], // Indigo, Cyan, Pink
                    borderRadius: 6,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        type: 'logarithmic',
                        title: { display: true, text: 'Number of Records (Log Scale)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltip
                }
            }
        });

        // --- CHART 2: Attack Success Rate (Line) ---
        const ctxAttack = document.getElementById('attackCurveChart').getContext('2d');
        const rawAttackLabels = ['0.0 (Clean)', '0.05', '0.10', '0.15', '0.20', '0.25 (High Perturbation)'];

        new Chart(ctxAttack, {
            type: 'line',
            data: {
                labels: wrapLabels(rawAttackLabels),
                datasets: [
                    {
                        label: 'FGSM (Single Step)',
                        data: [0, 15, 35, 55, 70, 82],
                        borderColor: '#f59e0b', // Amber
                        backgroundColor: 'rgba(245, 158, 11, 0.2)',
                        tension: 0.3,
                        pointRadius: 4,
                        fill: true
                    },
                    {
                        label: 'PGD (Iterative)',
                        data: [0, 25, 58, 85, 96, 99],
                        borderColor: '#ec4899', // Pink
                        backgroundColor: 'rgba(236, 72, 153, 0.2)',
                        tension: 0.3,
                        pointRadius: 4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: { display: true, text: 'Attack Success Rate (%)' }
                    },
                    x: {
                        title: { display: true, text: 'Epsilon (Perturbation Strength)' }
                    }
                },
                plugins: {
                    tooltip: commonTooltip,
                    legend: { position: 'bottom' }
                }
            }
        });

        // --- CHART 3: Defense Effectiveness (Grouped Bar) ---
        const ctxDefense = document.getElementById('defenseChart').getContext('2d');
        const rawDefenseLabels = ['Baseline Model', 'Under PGD Attack', 'With Adv. Training', 'With Feature Squeezing'];

        new Chart(ctxDefense, {
            type: 'bar',
            data: {
                labels: wrapLabels(rawDefenseLabels),
                datasets: [{
                    label: 'F1-Score (Malicious Class)',
                    data: [0.98, 0.12, 0.92, 0.85],
                    backgroundColor: [
                        '#4f46e5', // Indigo (Baseline)
                        '#ef4444', // Red (Attacked)
                        '#22c55e', // Green (Adv Training)
                        '#3b82f6'  // Blue (Feature Squeezing)
                    ],
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 1.0,
                        grid: { color: '#334155' }, // Dark grid for dark theme section
                        ticks: { color: '#94a3b8' }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: '#f8fafc' }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltip
                }
            }
        });

        // --- CHART 4: Plotly 3D Scatter (Conceptual Attack Space) ---
        // Generating synthetic data to visualize decision boundary and attacks
        function generateCluster(n, cx, cy, cz, noise) {
            let x = [], y = [], z = [];
            for (let i = 0; i < n; i++) {
                x.push(cx + (Math.random() - 0.5) * noise);
                y.push(cy + (Math.random() - 0.5) * noise);
                z.push(cz + (Math.random() - 0.5) * noise);
            }
            return {x, y, z};
        }

        const benign = generateCluster(50, 2, 2, 2, 2);
        const malicious = generateCluster(40, 6, 6, 6, 2);
        
        // Adversarial path: Moving a malicious point towards benign cluster
        const adversarial = {
            x: [6, 5, 4, 3, 2.5],
            y: [6, 5, 4, 3, 2.5],
            z: [6, 5.5, 4.5, 3.5, 3]
        };

        const traceBenign = {
            x: benign.x, y: benign.y, z: benign.z,
            mode: 'markers',
            type: 'scatter3d',
            name: 'Benign Traffic',
            marker: { size: 4, color: '#06b6d4', opacity: 0.8 } // Cyan
        };

        const traceMalicious = {
            x: malicious.x, y: malicious.y, z: malicious.z,
            mode: 'markers',
            type: 'scatter3d',
            name: 'Malicious Traffic',
            marker: { size: 4, color: '#ec4899', opacity: 0.8 } // Pink
        };

        const traceAttack = {
            x: adversarial.x, y: adversarial.y, z: adversarial.z,
            mode: 'lines+markers',
            type: 'scatter3d',
            name: 'Evasion Path',
            line: { width: 5, color: '#f59e0b' }, // Amber
            marker: { size: 3, color: '#f59e0b' }
        };

        const layout3d = {
            margin: {l: 0, r: 0, b: 0, t: 0},
            showlegend: true,
            legend: { x: 0, y: 1 },
            scene: {
                camera: { eye: {x: 1.5, y: 1.5, z: 1.5} },
                xaxis: {title: 'Feature 1', showgrid: true},
                yaxis: {title: 'Feature 2', showgrid: true},
                zaxis: {title: 'Feature 3', showgrid: true}
            },
            paper_bgcolor: 'rgba(0,0,0,0)',
            plot_bgcolor: 'rgba(0,0,0,0)'
        };

        Plotly.newPlot('plotly3d', [traceBenign, traceMalicious, traceAttack], layout3d, {responsive: true, displayModeBar: false});

    </script>
</body>
</html>